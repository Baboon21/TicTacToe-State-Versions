using System;
					
public class Program
{
	public static void Main()
	{
		figure// need to continue ---> just saving for now. will delete comment.
		displayRock();
	}	
	
	
//ASCII code because I thought it 
		public static string displayRock()
		{
			//the variable adding is similar to adding an integer not sure how this will display though. could have named it anything but i chose the most random one.
			string figure = "";
			figure +="'Rock'";
			figure +="    _______";
			figure +="---'   ____)";
			figure +="      (_____)";
			figure +="      (_____)";
			figure +="      (____)";
			figure +="---.__(___)";	
			return figure;
		}
	
	public static string displayPaper()
	{
		string figure = "";
		figure += "     _______";
		figure += "---'    ________";
		figure += "           ______)";
		figure += "          _______)";
		figure += "         _______)";
		figure += "---.__________)";
		return figure;
	}
	public static string displayScissors()
	{
	string figure = "";
		figure += "    ______";
		figure += "---'   ___)____";
		figure += "          ______)";
		figure += "       __________)";
		figure += "      (____)";
		figure += "---.__(___)";
		return figure;
	}
	
	public static string computerMove()
		{
		
		Random random = new Random();

            // Generate a random integer between 0 (inclusive) and 3 (exclusive)
            int randomNumber = random.Next(1, 3);
			
		switch(randomNumber)
		{
		
			case 1:
			  return displayRock();
			case 2:
				return displayScissors();
			default:
				return displayPaper();				
		}
		
	}
	public static string userMove()
	{
		Console.Write("Enter 1 (Rock), 2 (Paper), 3 (Scissors): "); //asks user for input
		while(true)
		{
			string input = Console.ReadLine();
			
		if (int.TryParse(input, out int INPUT) && INPUT >= 1 && INPUT <= 3) // here the input gets parsed and the value 1-3 gets selected
			{
  			switch(INPUT)//the value that is in
			{
			case 1: return displayRock();
			case 2: return displayScissors();
			case 3: return displayPaper();
			}
		Console.WriteLine("That's invalid. 		Please enter 1, 2, or 3!"); // after seeing a few different patterns in code i've seen online i've learned that sometimes the else is not needed(i would rather use that but i want to show what i have learned).
		}
	}
}
}
